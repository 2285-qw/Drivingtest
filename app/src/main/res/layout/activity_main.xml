<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/ViewPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"></android.support.v4.view.ViewPager>
    <LinearLayout
        android:id="@+id/allout"
        android:layout_weight="12"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/homeout"
            android:onClick="click1"
            android:drawablePadding="-20dp"
            android:drawableLeft="@drawable/home"
            android:text="主页"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"/>
        <TextView
            android:id="@+id/shuaout"
            android:onClick="click2"
            android:drawableLeft="@drawable/pen"
            android:drawablePadding="-20dp"
            android:text="刷题"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"/>
        <TextView
            android:id="@+id/shopout"
            android:onClick="click3"
            android:drawableLeft="@drawable/shop"
            android:drawablePadding="-20dp"
            android:text="商城"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"/>
        <TextView
            android:id="@+id/mineout"
            android:onClick="click4"
            android:drawableLeft="@drawable/man"
            android:drawablePadding="-20dp"
            android:text="我的"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>